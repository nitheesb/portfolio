<%- include('partials/header') %>
<section class="container py-5 text-center">
  <h2 class="section-title mb-5" data-aos="flip-left">Feedback & Endorsements</h2>
  <div class="row justify-content-center">
    <div class="col-md-7 carousel slide" id="testimonial-carousel" data-bs-ride="carousel" data-aos="zoom-in">
      <div class="carousel-inner">
        <% [ 
          {
            quote: "Transformed our releases—automation speed and reliability were game changers for us.",
            author: "CTO, ZenFinTech"
          },
          {
            quote: "Clear, actionable advice. Our GCP costs dropped by 20%, and support turnaround was instant.",
            author: "Founder, SmartRetail"
          },
          {
            quote: "Nithees trained our whole DevOps team—senior and junior—bridging knowledge gaps fast.",
            author: "Lead Engineer, SaaSify.io"
          }
        ].forEach(function(t, idx){ %>
        <div class="carousel-item<%= idx === 0 ? ' active' : '' %>">
          <div class="testimonial p-4 mx-3" style="background:#fbefff;border-radius:1.2rem;">
            <i class="fa-solid fa-quote-left fa-2x text-primary mb-2"></i>
            <p class="h5"><%= t.quote %></p>
            <div class="testimonial-author mt-3 text-primary fw-bold">
              &mdash; <%= t.author %>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
