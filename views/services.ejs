<script>
  // Fancy hover effect for service tiles
  document.querySelectorAll('.service-tile').forEach(tile => {
    tile.onmouseenter = () => tile.style.boxShadow = '0 12px 44px #49c3ff99';
    tile.onmouseleave = () => tile.style.boxShadow = '';
  });
</script>
