<script>
// Testimonials carousel activate
var el = document.getElementById("testimonial-carousel");
if (el) new bootstrap.Carousel(el,{interval:6000, pause:false});

// Project card hover
document.querySelectorAll('.project-hover').forEach(card=>{
  card.onmouseenter=()=>card.querySelector('.project-extra').style.display='block';
  card.onmouseleave=()=>card.querySelector('.project-extra').style.display='none';
});
</script>

<script>
// Mouse-following dot in SVG
document.addEventListener('mousemove', function(e) {
  const svg = document.getElementById('hero-bg');
  const dot = document.getElementById('follow-dot');
  if (svg && dot) {
    // Get mouse pos relative to SVG
    const rect = svg.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    // Constrain for hero section only
    if (x > 0 && y > 0 && x < rect.width && y < rect.height) {
      dot.setAttribute('cx', x);
      dot.setAttribute('cy', y);
      dot.setAttribute('opacity', 0.25 + 0.08 * Math.abs(Math.sin(Date.now()/300)));
    }
  }
});
</script>

