<%- include('partials/header') %>
<section class="container py-5">
  <div class="row align-items-center mb-5">
    <div class="col-md-4 text-center" data-aos="fade-up">
      <img src="https://ca.slack-edge.com/T0DAXU939-U04TCM739QQ-9d709b5f8bd1-512"
           alt="Nithees Balaji Mohan"
           class="img-fluid rounded-circle shadow-lg"
           style="width:180px; border:5px solid #1e5efd; box-shadow: 0 8px 32px #49c3ff77; margin-bottom:1.2rem;">
      <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_w51pcehl.json"
        background="transparent"
        speed="1"
        style="width:88px;height:88px;margin:0 auto -20px auto"
        loop autoplay>
      </lottie-player>
    </div>
    <div class="col-md-8">
      <div class="dynamic-header-container text-center py-4" data-aos="zoom-in-up">
        <h2 class="dynamic-header" id="main-title">About Me
          <div class="animated-underline mx-auto"></div>
        </h2>
      </div>
      <p class="lead">I’m Nithees Balaji Mohan: a <b>cloud-native engineer & DevOps leader</b> orchestrating automation, scale, and security for fast-moving businesses.</p>
      <ul class="mb-4">
        <li>Led cloud and Kubernetes migrations for Unicorn startups & enterprises</li>
        <li>Recognized for cost optimization and proven disaster recovery</li>
        <li>Mentored teams across Thailand, India, Malaysia, and beyond</li>
      </ul>
    </div>
  </div>
  <div class="timeline mb-5">
    <div class="timeline-item left" data-aos="fade-right">
      <h5>Rabbit Care (2023–Present)</h5>
      <ul>
        <li><b>Reduced GCP spend by 18%</b> with cost automation</li>
        <li>Scaled GKE clusters, 99.99% uptime</li>
        <li>Led DR, CI/CD, and best practice mentorship</li>
      </ul>
    </div>
    <div class="timeline-item right" data-aos="fade-left">
      <h5>Brikl, Thailand</h5>
      <ul>
        <li>Built secure AWS landing zones with Terraform</li>
        <li>Standardized pipelines, cut deployment errors 60%</li>
      </ul>
    </div>
    <div class="timeline-item left" data-aos="fade-right">
      <h5>Intertrust Technologies, India</h5>
      <ul>
        <li>Automated multi-prod AWS infra, DR, REST APIs</li>
      </ul>
    </div>
    <div class="timeline-item right" data-aos="fade-left">
      <h5>BYJUS, India</h5>
      <ul>
        <li>Orchestrated large-scale cloud deployments and ECS</li>
      </ul>
    </div>
    <div class="timeline-item left" data-aos="fade-right">
      <h5>Binfex Tech, India</h5>
      <ul>
        <li>CI/CD pipelines, monitoring, and zero-downtime ops</li>
      </ul>
    </div>
  </div>
  <h4 class="mt-4 mb-3" data-aos="fade-up">Key Technologies</h4>
  <div class="row g-4 text-center">
    <% [ 
      { icon: 'fa-brands fa-docker', name: 'Docker' },
      { icon: 'fa-solid fa-cloud', name: 'GCP/AWS/Azure' },
      { icon: 'fa-solid fa-network-wired', name: 'Kubernetes/GKE/EKS' },
      { icon: 'fa-solid fa-gears', name: 'Terraform/Ansible/Helm' },
      { icon: 'fa-solid fa-code-branch', name: 'GitHub Actions/Jenkins' },
      { icon: 'fa-solid fa-shield-halved', name: 'Prometheus/Nagios' }
    ].forEach(function(skill) { %>
    <div class="col-6 col-md-4" data-aos="zoom-in">
      <div class="card p-4 h-100 skill-tile">
        <i class="<%= skill.icon %> fa-2x"></i>
        <h6 class="mt-2"><%= skill.name %></h6>
      </div>
    </div>
    <% }); %>
  </div>
</section>
<script>
  document.querySelectorAll('.skill-tile').forEach(tile => {
    tile.onmouseenter = () => tile.style.transform = 'scale(1.12) rotate(-2deg)';
    tile.onmouseleave = () => tile.style.transform = '';
  });
</script>
<%- include('partials/footer') %>
