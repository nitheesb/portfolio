<%- include('partials/header') %>
<section class="container py-5">
  <h2 class="section-title text-center mb-4" data-aos="fade-down">Notable Projects & Achievements</h2>
  <!-- Filters -->
  <div class="text-center mb-4">
    <button class="filter-btn active" data-filter="all">All</button>
    <button class="filter-btn" data-filter="cloud">Cloud</button>
    <button class="filter-btn" data-filter="k8s">Kubernetes</button>
    <button class="filter-btn" data-filter="ci">CI/CD</button>
  </div>
  <!-- Projects -->
  <div class="row g-4" id="projects-list">
    <% const projectData = [
      {
        title: 'GCP Multi-Region Migration',
        tags: 'cloud k8s',
        summary: 'Migrated app infra to multi-GKE, 99.99% uptime, -18% cost.',
        details: 'Used GKE, Terraform, and automated DR. Standardized monitoring and release cycles.',
        delay: 0
      },
      {
        title: 'FreePBX on K8s',
        tags: 'k8s',
        summary: 'Telephony as microservice with CI/CD, auto-scaling.',
        details: 'Used Helm, custom pipelines for auto-recovery and scaling.',
        delay: 100
      },
      {
        title: 'GitHub Actions Accelerator',
        tags: 'ci cloud',
        summary: 'Deploy-ready code in 7 minutes, 60s production rollback.',
        details: 'Built pipeline templates, blue/green deploy, auto-notification.',
        delay: 200
      },
      {
        title: 'Microservices Disaster Recovery',
        tags: 'cloud',
        summary: 'Zero-seconds data loss on disaster dril, hybrid-cloud.',
        details: 'Designed resilient, tested backup/failover for APIs.',
        delay: 300
      },
      {
        title: 'DevOps Bootcamp Platform',
        tags: 'ci',
        summary: 'Upskilled teams with hands-on labs + mentoring.',
        details: 'Custom training content, automated assessment, feedback cycles.',
        delay: 400
      }
    ]; %>
    <% projectData.forEach((pr) => { %>
    <div class="col-md-4 project-card" data-category="<%= pr.tags %>" data-aos="zoom-in" data-aos-delay="<%= pr.delay %>">
      <div class="card p-3 h-100 project-hover">
        <h5><%= pr.title %></h5>
        <p><%= pr.summary %></p>
        <div class="project-extra" style="display:none;"><p><%= pr.details %></p></div>
      </div>
    </div>
    <% }); %>
  </div>
</section>
<script>
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.onclick = function() {
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      const category = btn.getAttribute('data-filter');
      document.querySelectorAll('.project-card').forEach(card => {
        if (category === 'all' || card.getAttribute('data-category').includes(category)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    }
  });
  // Project card hover reveal
  document.querySelectorAll('.project-hover').forEach(card => {
    card.onmouseenter = () => card.querySelector('.project-extra').style.display='block';
    card.onmouseleave = () => card.querySelector('.project-extra').style.display='none';
  });
</script>
<style>
.project-hover {
  position: relative;
  cursor: pointer;
  transition: box-shadow .2s;
}
.project-hover .project-extra {
  position: absolute;
  left: 0; right: 0; bottom: 0;
  background: #fb0081cc;
  color: #fff;
  padding: .6rem 1rem;
  border-radius: 0 0 1rem 1rem;
  font-size: 95%;
  z-index: 3;
  transition: opacity .3s;
}
.project-hover:hover {
  box-shadow: 0 2px 30px #fb008199;
}
</style>
<%- include('partials/footer') %>
